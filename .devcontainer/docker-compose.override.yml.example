services:
  dartwing-dev:
    volumes:
      # SSH configurations and keys for git operations inside the container
      # Uncomment and customize the SSH key paths you need:
      
      # SSH config file
      # - ~/.ssh/config:/home/${USER:-vscode}/.ssh/config:ro
      
      # Ed25519 key (recommended modern key type)
