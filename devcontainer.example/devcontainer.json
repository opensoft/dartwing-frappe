{
  "name": "Dartwing Frappe App",

  // This devcontainer connects to the existing Frappe infrastructure
  // Started from /home/brett/projects/frappe
  "dockerComposeFile": ["docker-compose.yml", "docker-compose.override.yml"],
  "service": "dartwing-dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "initializeCommand": "docker network inspect frappe-network >/dev/null 2>&1 || echo 'Warning: frappe-network not found! Start the main Frappe devcontainer first.' && docker rm -f dartwing-frappe 2>/dev/null || true",

  "customizations": {
    "vscode": {
      "extensions": [
        // Python extensions
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        // Infrastructure extensions
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "codeviz.codeviz",
        // AI assistance extensions
        "anthropic.claude-dev",
        "anthropic.claude-code",
        "openai.chatgpt",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "Google.geminicodeassist",
        "google.gemini-cli-vscode-ide-companion"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/workspaces/frappe-bench/env/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.cwd": "/workspace/bench/apps/dartwing"
      }
    }
  },

  "remoteUser": "${localEnv:USER}"

  "updateRemoteUserUID": false,

  "postCreateCommand": "echo 'Dartwing Frappe development environment ready'",
  "postStartCommand": "bash /workspace/scripts/setup_dartwing_in_frappeBench.sh || echo 'Setup will run when bench is available'",
  "postAttachCommand": "echo 'Connected to Dartwing Frappe workspace. Frappe bench shared at /workspace/workspaces/frappe-bench'"
}
